<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="sections.education.entities">

    <class name="sections.education.entities.HWAlbum" table="HWAlbums">
        <id name="hw_id" type="java.lang.Long">
            <column name="hw_id" />
            <generator class="foreign">
                <param name="property">homeworkItem</param>
            </generator>
        </id>
        <property name="mainPhotoLocation" length="2000"/>
        <one-to-one name="homeworkItem" class="sections.education.entities.HomeworkItem" constrained="true"/>

        <set name="albumPhotos" table="HWAlbumPhotos" fetch="join" lazy="false" inverse="true" cascade="all">
            <key>
                <column name="hw_id" not-null="true"/>
            </key>
            <many-to-many entity-name="model.entities.Photo">
                <column name="photo_id" not-null="true"/>
            </many-to-many>
        </set>

        <!--sections.feed.posts.model.entities-->
    </class>
</hibernate-mapping>