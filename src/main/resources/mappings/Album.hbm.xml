<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model.entities">

    <class name="Album" table="Albums">
        <id name="albumId" column="album_id">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="description"/>
        <property name="eventDate"/>
        <property name="mainPhotoLocation"/>
        <property name="publishDate"/>

        <set name="albumPhotos" table="AlbumPhotos" fetch="join">
            <key column="album_id"/>
            <many-to-many class="model.entities.Photo"/>
        </set>

    </class>
</hibernate-mapping>