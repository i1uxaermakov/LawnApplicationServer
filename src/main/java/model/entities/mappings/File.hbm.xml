private Long fileId;
        private String fileName;
        private Long fileSize;
        private String fileLocation;
        private Long newsIdThatFileIsAttachedTo;

<hibernate-mapping package="model.entities">

    <class name="File" table="Files">
        <id name="fileId" column="FILE_ID">
            <generator class="native"/>
        </id>
        <property name="fileName"/>
        <property name="whenAdded"/>
        <property name="text"/>
        <property name="urgency"/>

        <set name="attachedFiles" table="NEWS_FILES">
            <key column="NEWS_ID"/>
            <many-to-many column="FILE_ID" class="File"/>
        </set>

    </class>


</hibernate-mapping>