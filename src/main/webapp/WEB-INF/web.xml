<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>

    <jsp-config>
        <jsp-property-group id="defaultUtf8Encoder">
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>MainPageServlet</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>filters.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>URLRewritingFilter</filter-name>
        <filter-class>filters.URLRewritingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLRewritingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AuthorisationFilter</filter-name>
        <filter-class>filters.AuthorisationFilter</filter-class>
        <init-param>
            <param-name>CookieName</param-name>
            <param-value>petrmylyubimiypetr</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthorisationFilter</filter-name>
        <url-pattern>/*</url-pattern>

        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>IfAuthorisedFilter</filter-name>
        <filter-class>filters.IfAuthorisedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IfAuthorisedFilter</filter-name>
        <!--<url-pattern>/add/*</url-pattern>-->
        <url-pattern>/edu/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>


    <servlet>
        <servlet-name>vis</servlet-name>
        <jsp-file>/MainPageSliderVisualizer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>vis</servlet-name>
        <url-pattern>/MainPageSliderVisualizer.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddPostJSP</servlet-name>
        <jsp-file>/AddPostJSP.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPostJSP</servlet-name>
        <url-pattern>/AddPostJSP.jsp</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>EducationSphereServlet</servlet-name>
        <servlet-class>sections.education.EducationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EducationSphereServlet</servlet-name>
        <url-pattern>/sections.education/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>sections.feed.posts.PostsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/news/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/MainPageServlet</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>security.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>security.SignOutServlet</servlet-class>
        <init-param>
            <param-name>CookieName</param-name>
            <param-value>petrmylyubimiypetr</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    
