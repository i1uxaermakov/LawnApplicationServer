    <!--In welcome-file-list, you have to specify url of servlet/jsp without first slash(/)-->
    <!--If I want servlet mapped to url /MainPage to be default page, I write MainPage here-->
    <welcome-file-list>
        <welcome-file>edu/sc</welcome-file>
    </welcome-file-list>

    <!--filters-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>security.filters.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>URLRewritingFilter</filter-name>
        <filter-class>security.filters.URLRewritingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLRewritingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AuthorisationFilter</filter-name>
        <filter-class>security.filters.AuthorisationFilter</filter-class>
        <init-param>
            <param-name>RememberMeCookieName</param-name>
            <param-value>petrmylyubimiypetr</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthorisationFilter</filter-name>
        <url-pattern>/*</url-pattern>

        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>IfAuthorisedFilter</filter-name>
        <filter-class>security.filters.IfAuthorisedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IfAuthorisedFilter</filter-name>
        <!--<url-pattern>/add/*</url-pattern>-->
        <url-pattern>/edu/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!--end filters-->

    

