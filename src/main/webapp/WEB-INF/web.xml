    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>

    <jsp-config>
        <jsp-property-group id="defaultUtf8Encoder">
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

