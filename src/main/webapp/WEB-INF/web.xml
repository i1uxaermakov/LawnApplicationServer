<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!--Main servlet, through which all requests pass-->
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>EducationSphereServlet</servlet-name>
        <servlet-class>controller.EducationSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EducationSphereServlet</servlet-name>
        <url-pattern>/EducationSphereServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SocialSphereServlet</servlet-name>
        <servlet-class>controller.SocialSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SocialSphereServlet</servlet-name>
        <url-pattern>/SocialSphereServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SportSphereServlet</servlet-name>
        <servlet-class>controller.SportSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SportSphereServlet</servlet-name>
        <url-pattern>/SportSphereServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>controller.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/NewsServlet/*</url-pattern>
    </servlet-mapping>

</web-app>