<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>MainPageServlet</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>EducationSphereServlet</servlet-name>
        <servlet-class>controller.EducationSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EducationSphereServlet</servlet-name>
        <url-pattern>/education/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SocialSphereServlet</servlet-name>
        <servlet-class>controller.SocialSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SocialSphereServlet</servlet-name>
        <url-pattern>/social/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SportSphereServlet</servlet-name>
        <servlet-class>controller.SportSphereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SportSphereServlet</servlet-name>
        <url-pattern>/sport/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>controller.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/MainPageServlet</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>controller.security.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>


</web-app>